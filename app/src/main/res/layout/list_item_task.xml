<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:background="@color/Silver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <!--<ImageView
        android:id="@+id/list_item_task_done_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>-->
    <ImageView
        android:id="@+id/list_item_task_done_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        android:src="@drawable/checked"/>
    <TextView
        android:id="@+id/list_item_task_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_task_done_check_box"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Task Title"/>
    <TextView
        android:id="@+id/list_item_task_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_task_done_check_box"
        android:layout_below="@id/list_item_task_title_text_view"
        android:padding="4dp"
        tools:text="Task Date"/>

</RelativeLayout>